{
	"manifest_version": 2,
	"name": "MyMangaDex",
	"version": "1.3",

	"applications": {
		"gecko": {
			"id": "mymangadex@glagan",
			"strict_min_version": "59.0"
		}
	},

	"description": "Integrate MyAnimeList into MangaDex to autotrack read chapters.",

	"permissions": [
		"*://myanimelist.net/*",
		"storage",
		"clipboardWrite"
	],

	"icons": {
		"48": "icons/mmd-48.png",
		"96": "icons/mmd-96.png"
	},

	"options_ui": {
		"page": "options.html"
	},

	"content_scripts": [{
		"matches": [
			"https://mangadex.org/follows",
			"https://mangadex.org/follows/chapters/*",
			"https://mangadex.org/manga/*",
			"https://mangadex.org/chapter/*",
			"https://mangadex.org/?page=search&title=*",
			"https://mangadex.org/quick_search/*"],
		"js": ["dist/vanilla-notify.min.js", "mymangadex.js"],
		"css": ["dist/vanilla-notify.css", "mymangadex.css"]
	}]
}